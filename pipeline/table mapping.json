{
	"name": "table mapping",
	"properties": {
		"activities": [
			{
				"name": "Mapping",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "@{pipeline().parameters.schema}.@{pipeline().parameters.table}"
					},
					{
						"name": "Destination",
						"value": "data-container/@{pipeline().parameters.path}/@{pipeline().parameters.filename}"
					}
				],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"additionalColumns": [
							{
								"name": "ProcessDate",
								"value": {
									"value": "@utcNow()",
									"type": "Expression"
								}
							}
						],
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false,
					"validateDataConsistency": true,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "brand_id",
									"type": "Int32",
									"physicalType": "int"
								},
								"sink": {
									"name": "brand_id",
									"type": "Int32",
									"physicalType": "INT_32"
								}
							},
							{
								"source": {
									"name": "brand_name",
									"type": "String",
									"physicalType": "varchar"
								},
								"sink": {
									"name": "brand_name",
									"type": "String",
									"physicalType": "UTF8"
								}
							},
							{
								"source": {
									"name": "ProcessDate"
								},
								"sink": {
									"name": "ProcessDate"
								}
							}
						],
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "AzureSqlTable1",
						"type": "DatasetReference",
						"parameters": {
							"table": {
								"value": "@pipeline().parameters.table",
								"type": "Expression"
							},
							"schema": {
								"value": "@pipeline().parameters.schema",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "Parquet1",
						"type": "DatasetReference",
						"parameters": {
							"path": {
								"value": "@pipeline().parameters.path",
								"type": "Expression"
							},
							"filename": {
								"value": "@pipeline().parameters.filename",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"table": {
				"type": "string",
				"defaultValue": "categories"
			},
			"schema": {
				"type": "string",
				"defaultValue": "production"
			},
			"path": {
				"type": "string",
				"defaultValue": "dev"
			},
			"filename": {
				"type": "string",
				"defaultValue": "production-categories.parquets"
			}
		},
		"annotations": []
	}
}